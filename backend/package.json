    "express-validator": "^7.0.1",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.6",
    "@types/bcrypt": "^5.0.2",
    "@types/express-session": "^1.17.10",
    "@types/cors": "^2.8.17",
